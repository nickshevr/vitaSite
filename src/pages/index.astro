---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import MainBlock from '../components/MainBlock.astro';
import SecondBlock from '../components/SecondBlock.astro';
import InfoBlock from '../components/InfoBlock.astro';
import Footer from '../components/Footer.astro';
import ProductCarousel from '../components/ProductsCarousel.astro';
import BuyNow from '../components/BuyNow.astro';
import StructuredData from '../components/StructuredData.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="en">
	<head>
		<link rel="sitemap" href="/sitemap-index.xml" />
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<StructuredData
			type="WebPage"
			data={{
				title: SITE_TITLE,
				description: SITE_DESCRIPTION
			}}
		/>
		<!-- Organization schema for better brand representation in search results -->
		<script type="application/ld+json">
		{
			"@context": "https://schema.org",
			"@type": "Organization",
			"name": "MyBuddy",
			"url": "https://mybuddy.ru",
			"logo": "https://mybuddy.ru/BUDDYFAV.png",
			"description": "MyBuddy - команда биохакинг-энтузиастов"
		}
		</script>
	</head>
	<body>
		<main>
			<Header />
			<MainBlock />
			<InfoBlock />
			<SecondBlock />
			<ProductCarousel />
			<BuyNow />
		</main>
		<Footer />
	</body>
	<style>
		@media (min-width: 720px) {
			main {
				max-width: 1520px;
			}
		}
	</style>
</html>
