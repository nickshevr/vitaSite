---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import MainBlock from '../components/MainBlock.astro';
import SecondBlock from '../components/SecondBlock.astro';
import InfoBlock from '../components/InfoBlock.astro';
import Footer from '../components/Footer.astro';
import ProductCarousel from '../components/ProductsCarousel.astro';
import BuyNow from '../components/BuyNow.astro';

import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';

---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<main>
			<Header />
			<MainBlock />
			<InfoBlock />
			<SecondBlock />
			<ProductCarousel />
			<BuyNow />
		</main>
		<Footer />
	</body>
	<style>
		@media (min-width: 720px) {
			main {
				max-width: 1500px;
			}
		}
	</style>
</html>
