---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/HeaderInverted.astro';
import Footer from '../components/Footer.astro';
import Bullets from '../components/Bullets.astro';
import BuyNow from '../components/BuyNow.astro';

type Props = CollectionEntry<'articles'>['data'];

const { title, description = '', tags, image } = Astro.props;
---

<html lang="ru">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body>
    <Header />
    <main class="main">
      <div class="row">
        <div class="column">
          {image && (
            <div class="image-container">
              <img src={image.src} alt={image.alt} />
            </div>
          )}
          <div class="mobile">
            <Bullets bullets={tags} type='circle' />
            <h1>{title}</h1>
            {description && <p class="description">{description}</p>}
            <div class="content">
              <slot />
            </div>
          </div>
        </div>
        <div class="desktop column info">
          <Bullets bullets={tags} type='circle' />
          <h1>{title}</h1>
          {description && <p class="description">{description}</p>}
          <div class="content">
            <slot />
          </div>
        </div>
      </div>
    </main>
    <BuyNow />
    <Footer />
  </body>
</html>

<style>
  .main {
    margin-top: 20px;
    padding: 0 20px;
  }

  .row {
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    width: 100%;
  }

  .column {
    display: flex;
    flex-direction: column;
    flex-basis: 100%;
    flex: 1;
  }

  .info {
    margin-left: 20px;
    flex: 0.35;
  }

  .image-container {
    width: 100%;
    border-radius: 8px;
    overflow: hidden;
  }

  .image-container img {
    width: 100%;
    height: auto;
    object-fit: cover;
  }

  h1 {
    font-weight: 400;
    font-size: 50px;
    line-height: 87%;
    letter-spacing: -0.03em;
    color: #3f1a05;
  }

  p {
    font-weight: 400;
    font-size: 16px;
    color: #000;
  }

  .description {
    margin-bottom: 2rem;
  }

  .content {
    font-size: 16px;
    line-height: 1.6;
  }

  .content :global(h2) {
    font-weight: 400;
    font-size: 24px;
    color: #3f1a05;
    margin: 2rem 0 1rem;
  }

  .content :global(p) {
    margin-bottom: 1rem;
  }

  .content :global(ul) {
    list-style-type: disc;
    margin-left: 1.5rem;
    margin-bottom: 1rem;
  }

  .content :global(li) {
    margin-bottom: 0.5rem;
  }

  .desktop {
    display: none;
  }

  .mobile {
    margin-top: 15px;
  }

  @media (min-width: 720px) {
    .main {
      max-width: 1520px;
      padding: 0 60px;
    }

    .desktop {
      display: block;
    }

    .mobile {
      display: none;
    }
  }
</style>
