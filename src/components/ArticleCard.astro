---
interface Props {
    heroImage: string;
    title: string;
    tags: string[];
    slug: string;
    description: string;
}

import {BASE_URL_PREFIX} from '../consts';
import Bullets from './Bullets.astro';

const { slug, heroImage, title, description, tags } = Astro.props;
---

<div class="main">
    <a class="imageLink" href={`${BASE_URL_PREFIX}/articles/${slug}`}>
        <img class="image" src={`${BASE_URL_PREFIX}/${heroImage}`} alt={title}/>
    </a>
    <div class="content">
        <Bullets class='bullets' bullets={tags} type='circle'/>
        <h2 class="title">{title}</h2>
        <p class="text">{description}</p>
    </div>
</div>
<style>
    .main {
        display: flex;
        flex-direction: column;
        color: #381e12;
        width: 100%;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .imageLink {
        display: block;
        width: 100%;
        aspect-ratio: 1.5;
        overflow: hidden;
        margin-bottom: 0;
    }

    .image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .imageLink:hover .image {
        transform: scale(1.05);
    }

    .content {
        padding: 20px;
    }

    @media (min-width: 720px) {
        .main {
            width: calc(50% - 20px);
        }
    }

    .title {
        margin-top: 15px;
        font-weight: 400;
        font-size: 32px;
        line-height: 100%;
        letter-spacing: -0.04em;
        color: #3f1a05;
    }

    .text {
        margin-top: 10px;
        font-weight: 400;
        font-size: 16px;
        color: #3f1a05;
    }

    .bullets {
        margin-top: 0;
    }
</style>
