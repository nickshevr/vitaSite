---
interface Props {
	heroImage: string;
    title: string;
    bullets: string[];
    id: string;
    description: string;
}

import {BASE_URL_PREFIX} from '../consts';

const { id, heroImage, title, description, bullets} = Astro.props;
---

<div class="main">
    <img src={`${BASE_URL_PREFIX}/${heroImage}`}/>
    <div class="bullets">
        {
            bullets.map(bullet => (
                <div class="bullet">{bullet}</div>
            ))
        }
    </div>
    <div class="title">{title}</div>
    <div class="text">{description}</div>
    <a class="infoButton" href={`${BASE_URL_PREFIX}/product/${id}`}>
        <p class="centered info subTitle">Подробнее</p>
    </div>
</div>
<style>
    .main {
        margin-top: 30px;
        padding: 0 20px;
        display: flex;
        flex-direction: column;
        color: #381e12;
    }

    .infoButton {
        width: 350px;
        margin-top: 35px;
    }

    @media (min-width: 720px) {
        .main {
            width: 45%;
	    }
    }

    .centered {
        display: flex;
        align-items: center;
        align-content: center;
        justify-content: center;
    }

    .title {
        margin-top: 15px;
        font-weight: 400;
        font-size: 46px;
        line-height: 100%;
        letter-spacing: -0.04em;
        color: #3f1a05;
    }
    .subTitle {
        color: #000;
        font-size: 22px;
    }
    .text {
        font-weight: 400;
        font-size: 16px;
        color: #000;
    }
    .info {
        padding: 5px 40px;
        border: 2px solid #381e12;
    }

    .bullets {
        display: flex;
        margin-top: 20px;
    }

    .bullet {
        content: flex;
        border: 1px solid #000;
        border-radius: 60px;
        padding: 0px 10px 2px 10px;
        margin-right: 8px;
    }
</style>
