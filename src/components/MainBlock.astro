---
import { getImage } from "astro:assets";
import myBackground from "../images/main_photo.png";
import mobileBackground from "../images/main_mobile.png";
import Header from '../components/Header.astro';

const optimizedBackground = await getImage({src: myBackground, format: 'webp'});
const optimizedMobile = await getImage({src: mobileBackground, format: 'webp'});
---
<div class="root">
	<Header />
	<div class="blockContent">
		<slot />
	</div>
</div>

<style define:vars={{mobile: `url(${optimizedMobile.src})`, desktop: `url(${optimizedBackground.src})`}}>
	.root {
		width: 100%;
		height: 580px;
		background-image: var(--mobile);
		background-size: cover;
	}

	.blockContent {
		display: flex;
		align-items: center;
		flex-direction: column;
	}

	@media (min-width: 720px) {
		.root {
			background-size: cover;
			height: 800px;
			background-image: var(--desktop);
		}

		.blockContent {
		}
	}
</style>
