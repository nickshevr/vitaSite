---
interface Props {
	bullets: string[];
    type: 'circle' | 'square';
    title?: string;
    class?: string;
}


const { bullets, type, class: className, title, ...rest } = Astro.props;

---
{bullets.length > 0 &&
    <div class={className} {...rest}>
        <p class="root">{title}</p>
        <div class="bullets">
            {
                bullets.map(bullet => (
                    <p class={type + " bullet root"}>{bullet}</p>
                ))
            }
        </div>
    </div>
}
<style>
    p {
        font-size: 16px;
        margin-block-start: 0;
        margin-block-end: 0;
    }

    .root {
        color: #3f1a05;
    }

    .bullets {
        display: flex;
        margin-top: 6px;
    }

    .bullet {
        border: 1px solid #000;
        padding: 10px 8px;
        margin-right: 5px;
    }

    .circle {
        margin-right: 8px;
        border-radius: 60px;
        padding: 0px 10px 2px 10px;
    }
</style>
